<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/header"
            app:qmui_is_circle="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>
        
        <TextView
            android:id="@+id/tvCommentNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456"
            android:textSize="14sp"
            android:textColor="@color/txt_color"
            android:layout_marginTop="16dp"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvCommentContent"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/txt_color"
            android:layout_marginBottom="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/llThumbContainer"/>
        
        <LinearLayout
            android:id="@+id/llThumbContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/tvCommentContent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/imgZan"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@mipmap/zan"
                android:adjustViewBounds="true"
                android:padding="16dp"
                android:background="@drawable/bg_common_ripple_white"/>

            <ImageView
                android:id="@+id/imgZan2"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@mipmap/zan2"
                android:adjustViewBounds="true"
                android:padding="16dp"
                android:background="@drawable/bg_common_ripple_white"
                android:visibility="gone"/>
        </LinearLayout>
        
        <TextView
            android:id="@+id/tvBulous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="èµž"
            app:layout_constraintTop_toBottomOf="@+id/llThumbContainer"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14sp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/txtDeepGray"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/baseLine"
        android:layout_marginStart="16dp"></View>
</LinearLayout>